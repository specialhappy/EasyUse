<div class="container" style="margin-top: 60px">

	<div class="row" style="margin-top:40px">
		<div class="col-md-3" >
			Logo
		</div>

		<div class="col-md-9">
			<center>
				<h3>预约</h3>
			</center>
		</div>

	</div>

	<div class="row" style="margin-top:40px">

		<div class="col-md-12" style="padding:20px">

			<table class="table table-hover">

				<thead>
					<tr>
						<th>日期</th>
						<th>时间</th>
						<th>支付状态</th>
						<th>费用</th>
						<th>提交时间</th>
						<th>申请状态</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @appointments.each do |appointment| %>
					<tr>
						<td><%= appointment.date %></td>

						<td> <%= appointment.time %> </td>

						<td><%= appointment.price_paid %></td>
						<td><%= appointment.fee %></td>
						<td><%= appointment.submit_time %></td>
						<td><%= appointment.status %></td>
						<td>
						<%if appointment.user_id==session[:user_id] && appointment.status=="未开始"%>
						<a href="/customer/appointments/appointment_start?appointment_id=<%= appointment.id%>">开始实验</a>
						<%end%>
						</td>
						<td>
						<%if appointment.user_id==session[:user_id] && appointment.status!="已结束"%>
						<a href="/customer/appointments/appointment_finish?appointment_id=<%= appointment.id%>">结束实验</a>
						<%end%>
						</td>
					</tr>
					<% end %>
				</tbody>

			</table>

		</div>
	</div>

	<!--%= link_to 'New Appointment', new_appointment_path%-->
</div>

