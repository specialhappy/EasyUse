<div class="container" style="margin-top: 60px";>

	<div class="row">
		<div class="col-md-3"  style="margin-top:40px">
			Logo
		</div>

		<div class="col-md-9" style="margin-top:40px">
			<center>
				<h3>我的账户</h3>
			</center>
		</div>

	</div>
	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "customer/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">

			<table class="table table-striped">
				<thead>
					<tr>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>卡号</td><td> <%= @user.card_number %></td>
					</tr>
					<tr>
						<td>姓名</td><td> <%= @user.name %></td>
					</tr>
					<tr>
						<td>密码</td><td><%= @user.password %></td>
					</tr>
					<tr>
						<td>性别</td><td> <%= @user.sex %></td>
					</tr>
					<tr>
						<td>发送时间</td><td> <%= @user.id_number %></td>
					</tr>
					<tr>
						<td>电话号码</td><td> <%= @user.phone %></td>
					</tr>
					<tr>
						<td>照片</td><td> <%= @user.picture %></td>
					</tr>
					<tr>
						<td>邮件地址</td><td> <%= @user.email %></td>
					</tr>
					<tr>
						<td>住址</td><td> <%= @user.address %></td>
					</tr>
					<tr>
						<td>登录次数</td><td><%= @user.login_number %></td>
					</tr>
					<tr>
						<td>最后登录时间</td><td> <%= @user.last_login_time %></td>
					</tr>
					<tr>
						<td>状态</td><td> <%= @user.status %></td>
					</tr>

				</tbody>
			</table>

			<div class="row pull-right">
				<%= link_to '编辑账户信息', edit_user_path(@user) %> |
				<!--<%= link_to 'Back', users_path %>-->
			</div>
		</div>
	</div>
</div>

