<div class="container" style="margin-top: 60px">
	<div class="row">
		<div class="row">
			<div class="col-md-3"  style="margin-top:40px">
				Logo
			</div>

			<div class="col-md-9" style="margin-top:40px">
				<center>
					<h3>我来付款</h3>
				</center>
			</div>

		</div>

	</div>
	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "customer/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">

			<table class="table table-hover">

				<thead>
					<tr>
						<th>日期</th>
						<th>时间</th>
						<th>支付状态</th>
						<th>费用</th>
						<th>提交时间</th>
						<th>申请状态</th>
						<th colspan="1"></th>
					</tr>
				</thead>

				<tbody>
					<% @appointments.each do |appointment| %>
					<tr>
						<td><%= appointment.date %></td>
						<td><%= appointment.time %></td>
						<td><%= appointment.price_paid %></td>
						<td><%= appointment.fee %></td>
						<td><%= appointment.submit_time.to_s[0,10] %></td>
						<td> <%= appointment.status %> </td>
						<td><%= link_to '详情', appointment %></td>
						<td><%if appointment.price_paid!="已付款"%><a href="/payment/pay?appointment_id=<%= appointment.id%>">付款</a> <%end%> </td>
					</tr>
					<% end %>
				</tbody>

			</table>

		</div>
	</div>

</div>

