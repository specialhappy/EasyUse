<%= render "common/header"%>
<div class="container" style="margin-top: 60px">
	<div class="row">
		<div class="col-md-3"  style="margin-top:40px">
			Logo
		</div>

		<div class="col-md-9" style="margin-top:40px">
			<!--center>
				<p  id="notice">
					<%= notice %>
			</center>
			</p-->
		</div>

	</div>
	<hr/>

	<div class="jumbotron">
		<center>
			<h2><%= @instrument.name %> </h2>
			<p>

				<%= image_tag(@instrument.img_url)%>

			</p>

			<table class="table table-striped">
				<thead>
					<tr>
						<th>型号</th><th>价格</th><th>计费方式（元/小时）</th><th>描述</th><th>状态</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td class="info"><%= @instrument.model %></td>
						<td class="info"> <%= @instrument.price %></td>
						<td class="info"> <%= @instrument.fee_per_hour %></td>
						<td class="info"> <%= @instrument.description %></td>
						<td class="info"> <%= @instrument.status %></td>
					</tr>

				</tbody>
			</table>

			<p>
				<a class="btn btn-lg btn-success" href="/appointments/new?id=<%=@instrument.id%>" role="button">预约</a>
			</p>
		</center>
	</div>

	<!--<%= link_to 'Edit', edit_instrument_path(@instrument) %> |
	<%= link_to 'Back', instruments_path %>-->

</div>
<script type="text/javascript">
	window.status=<%= notice %></script>

