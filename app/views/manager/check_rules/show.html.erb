<div class="container" style="margin-top: 60px">

	<div class="row">
		<div class="col-md-3"  style="margin-top:40px">
			Logo
		</div>

		<div class="col-md-9" style="margin-top:40px">
			<center>
				<h3>审核规则</h3>
			</center>
		</div>

	</div>

	<div class="row">
		<div class="col-md-2" style="padding: 20px">
			<%= render "manager/common/sidebar"%>
		</div>

		<div class="col-md-10" style="padding:20px">

			<table class="table table-striped">
				<thead>
					<tr>
						<th colspan="2"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>规则名:</td><td> <%= @manager_check_rule.name %></td>
					</tr>
					<tr>
						<td>规则描述:</td><td><%= @manager_check_rule.description %></td>
					</tr>
					<tr>
						<td>是否启用:</td><td><td><%if @manager_check_rule.applid %>是<%else%>否<%end%></td></td>
					</tr>

				</tbody>
			</table>

			<div class="row pull-right">
				<%= link_to '编辑审核规则',  edit_manager_check_rule_path(@manager_check_rule) %> |
				<%= link_to '返回', manager_check_rules_path %>
			</div>
		</div>
	</div>
</div>

